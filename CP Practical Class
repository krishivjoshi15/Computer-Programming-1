#include <stdio.h>
int main(){
    // ascending order
int i,n,temp,j;

printf("Enter the number of elements in array: ");
scanf("%d", &n);

int num[n];

for(i=0;i<n;i++){
    printf("Enter the (%d) element: ", i+1);
    scanf("%d", &num[i]);
}

for(i=0;i<n;i++){
    for(j=i+1;j<n;j++){
        if(num[i]>num[j]){
            temp = num[i];
            num[i] = num[j];
            num[j] = temp;
        }
    }
}
for(i=0;i<n;i++){
    printf("%d ", num[i]);
}

// descending order


for(i=0;i<n;i++){
    for(j=i+1;j<n;j++){
        if(num[i]<num[j]){
            temp = num[i];
            num[i] = num[j];
            num[j] = temp;
        }
    }
}
printf("\n");

for(i=0;i<n;i++){
    printf("%d ", num[i]);
}

return 0;
}
