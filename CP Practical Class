#include <stdio.h>
int main(){
    // ascending order
int i,temp,j;
int num[6] = {25,31,2,6,47,10};

for(i=0;i<6;i++){
    for(j=i+1;j<6;j++){
        if(num[i]>num[j]){
            temp = num[i];
            num[i] = num[j];
            num[j] = temp;
        }
    }
}
for(i=0;i<6;i++){
    printf("%d ", num[i]);
}

// descending order


for(i=0;i<6;i++){
    for(j=i+1;j<6;j++){
        if(num[i]<num[j]){
            temp = num[i];
            num[i] = num[j];
            num[j] = temp;
        }
    }
}
printf("\n");

for(i=0;i<6;i++){
    printf("%d ", num[i]);
}

return 0;
}

